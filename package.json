{
  "name": "codeflash",
  "version": "1.0.0",
  "description": "Micro-learning platform for web development",
  "type": "module",
  "scripts": {
    "prepare:static": "mkdir -p public/data && cp data/db.json public/data/db.json || true",
    "predev": "npm run prepare:static",
    "dev": "http-server public -p 3000 -c-1",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "moduleNameMapping": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
